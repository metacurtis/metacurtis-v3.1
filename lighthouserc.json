{
  "ci": {
    "collect": {
      "url": ["http://localhost:4173"],
      "numberOfRuns": 1
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "render-blocking-resources": ["warn", { "maxLength": 2 }],
        "csp-xss": "off",
        "errors-in-console": ["warn", {}],
        "installable-manifest": "off",
        "maskable-icon": "off",
        "service-worker": "off",
        "splash-screen": "off",
        "themed-omnibobx": "off", // Typo still here, harmless but removable
        "themed-omnibox": "off",
        "meta-description": "off",
        "unused-javascript": ["warn", { "maxLength": 1 }],
        "robots-txt": "off" // <-- Fix added: Turn off robots.txt check
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
